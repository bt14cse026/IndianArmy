<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/holo_orange_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.78"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:layout_margin="3dp"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="0.16"
            android:src="@drawable/bharatkevir" />

        <TextView
            android:id="@+id/puma"
            android:background="@android:color/holo_red_dark"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.16"
            android:gravity="center|center_horizontal"
            android:text="INDIAN ARMY"
            android:textColor="#ff287e"
            android:textSize="50sp"
            android:textStyle="italic|bold" />

        <TextView
            android:background="@android:color/white"
            android:id="@+id/sima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|top"
            android:text="The 3rd largest force in the world, Indian Army is not only about might but also about bringing pride to the nation.Apart from defending the honour of our country from foreign powers, helping the government"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="italic|bold"
            android:layout_weight="0.05" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="0.19"
        android:layout_width="match_parent"
        android:background="@android:color/holo_green_dark"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/jena"
            android:text="Welcome"
            android:textSize="50sp"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:textColor="#ffff4c2f"
            android:layout_weight="0.25"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/jewan"
            android:text="https://indianarmy.nic.in/"
            android:textColor="#ff27d0"
            android:layout_weight="0.1"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

</LinearLayout>
